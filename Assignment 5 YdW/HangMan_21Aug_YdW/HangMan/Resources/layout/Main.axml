            android:layout_weight="0.125" />
        <Button
            android:id="@+id/btnN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:layout_weight="0.125" />
        <Button
            android:id="@+id/btnO"
            android:layout_width="wrap_content"
